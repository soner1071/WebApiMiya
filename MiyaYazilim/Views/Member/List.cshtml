
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <title>List</title>
</head>
<body>
    <a style="margin-left:68%;width:15%;" class="btn btn-primary" href="/Member/Add">Ekle</a>
    <div class="container">

        <table id="mytable" class="table table-bordered">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Email</th>
                    <th>Profil</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.listem)
                {


                    <tr>
                        <td>@item.first_name</td>
                        <td>@item.last_name</td>
                        <td><a>@item.email</a></td>
                        <td> <img src="@item.avatar" /></td>
                    </tr>
                }

            </tbody>
        </table>
        <table class="table table-bordered">
            <tr><td style="text-align:right">Kişi sayısı:   @ViewBag.listem.Count</td></tr>
        </table>


    </div>

</body>
</html>


